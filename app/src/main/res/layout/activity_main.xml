<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:id="@+id/modifyTV"
        android:text="Enter new Gate's PassKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_below="@id/modifyTV"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/passkeyText"/>

    <Button
        android:layout_below="@id/passkeyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/changePasskey"
        android:text="Change Passkey"
        android:paddingBottom="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/URL_changing"
        android:text="URL Settings"
        android:layout_below="@id/changePasskey"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/URLnewValue"
        android:layout_below="@id/URL_changing"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/changeURLBtn"
        android:layout_below="@+id/URLnewValue"
        android:text="Change URL Value"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/network_Password"
        android:text="Network Password"
        android:layout_below="@id/changeURLBtn"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/networkNewPass"
        android:layout_below="@id/network_Password"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/changeNetworkPasswordBtn"
        android:layout_below="@+id/networkNewPass"
        android:text="Change network Password Value"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/changeSSID"
        android:text="Change SSID"
        android:layout_below="@+id/changeNetworkPasswordBtn"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/changeSSID"
        android:id="@+id/newSSID"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Change SSID"
        android:id="@+id/changeSSIDBtn"
        android:layout_below="@+id/newSSID"/>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:id="@+id/resetURL"
        android:text="Reset URL"
        android:layout_below="@+id/URLnewValue"
        android:layout_alignEnd="@+id/URLnewValue" />
</RelativeLayout>
